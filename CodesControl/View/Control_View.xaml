<UserControl x:Class="CodesControl.View.Control_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodesControl.View"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="700" >
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Статус кода"  Foreground="#333333" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14.667" Margin="10,0,0,0"/>

                <ListView x:Name="CodesTypes" 
                 ItemsSource="{Binding CodesType}" 
                  Grid.Row="1" BorderBrush="{x:Null}" Background="{x:Null}" Margin="0,0,10,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Border Padding="10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Title}" />
                                        <TextBlock Text="{Binding Count}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>            
        </Border>


        <Border Grid.Column="1" BorderThickness="1,0,0,0" BorderBrush="#cccccc">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ListView x:Name="AviableItems" 
                 ItemsSource="{Binding AviableCollection}"
                 IsSynchronizedWithCurrentItem="True"
                 Grid.Row="1" BorderBrush="{x:Null}" Background="{x:Null}" Margin="10,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="5">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding UserLastName}" 
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding UserName}" 
                                                    Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding UserParentName}" 
                                                   Margin="0,0,5,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,10">
                                        <TextBlock Text="Код:" Margin="10,0"/>
                                        <TextBlock Text="{Binding UserCode}"/>
                                        <TextBlock Text="шт" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Логин:" Margin="10,0"/>
                                        <TextBlock Text="{Binding UserCode}"/>
                                        <TextBlock Text="Email:" Margin="10,0"/>
                                        <TextBlock Text="{Binding UserEmail}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>            
        </Border>


        <Border Grid.Column="2" BorderThickness="1,0,0,0" BorderBrush="#cccccc">
            <Grid>
                <ContentControl Content="{Binding AviableCollection}" >
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding UserLastName}" 
                                                    Margin="0,0,5,0" FontSize="18"/>
                                    <TextBlock Text="{Binding UserName}" 
                                                    Margin="0,0,5,0" FontSize="18"/>
                                    <TextBlock Text="{Binding UserParentName}" 
                                                    Margin="0,0,5,0" FontSize="18"/>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Название:"/>
                                    <TextBox Text="{Binding UserName, Mode=OneWay}"
                                     Margin="0,0,0,10"/>

                                    <TextBlock Text="Автор:"/>
                                    <TextBox Text="{Binding UserLastName, Mode=OneWay}" 
                                     Margin="0,0,0,10"/>
                                </StackPanel>
                             </StackPanel>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </Grid>
        </Border>
        
    </Grid>
</UserControl>
